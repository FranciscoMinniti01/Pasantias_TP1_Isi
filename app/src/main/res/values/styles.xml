<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edit_view" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/naranja_O</item>
        <item name="android:textColorHint">@color/naranja_O</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="buttom" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textScaleX">1</item>
    </style>

    <style name="titles" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/verde1</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textScaleX">1</item>
    </style>

</resources>