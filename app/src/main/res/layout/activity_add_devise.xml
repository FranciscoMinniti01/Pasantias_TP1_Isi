<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentation.Configurations.AddDevise.AddDeviseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/lookfor"
        tools:ignore="MissingConstraints,UnknownIdInLayout"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            tools:ignore="TextFields">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo_smart_things"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:contentDescription="@string/logo"
                    android:gravity="center"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/logo_smart_things" />

                <TextView
                    android:id="@+id/text_smart_things"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="@string/name_app"
                    android:textColor="#00CC00"
                    android:textScaleX="1"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/add_back_buttom"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimaryDark"
                    android:src="@drawable/button_back"/>

            </LinearLayout>

            <TextView
                style="@style/titles"
                android:text="@string/add_new_devise" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/edit_add_flow"
                style="@style/edit_view"
                android:backgroundTint="@color/naranja_O"
                android:hint="@string/add_edit_flow" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/edit_add_room"
                android:backgroundTint="@color/naranja_O"
                android:hint="@string/add_edit_room"
                style="@style/edit_view" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/edit_add_type"
                android:backgroundTint="@color/naranja_O"
                android:hint="@string/add_edit_type"
                style="@style/edit_view" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/edit_add_name"
                android:backgroundTint="@color/naranja_O"
                android:hint="@string/add_edit_name"
                style="@style/edit_view" />

            <Space
                android:id="@+id/progreSpace"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <ProgressBar
                android:id="@+id/addProgres"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/add_device_buttom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_buttom_one"
                android:text="@string/add_devise"
                style="@style/buttom"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>