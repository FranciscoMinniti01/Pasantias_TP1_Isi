<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentation.Configurations.ConfigActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/lookfor"
        tools:ignore="MissingConstraints"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            tools:ignore="TextFields">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo_smart_things"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:contentDescription="@string/logo"
                    android:gravity="center"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/logo_smart_things" />

                <TextView
                    android:id="@+id/text_smart_things"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="@string/name_app"
                    android:textColor="#00CC00"
                    android:textScaleX="1"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/Devise_back_buttom"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimaryDark"
                    android:src="@drawable/button_back"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />


            <EditText
                android:id="@+id/DeviseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/naranja_O"
                style="@style/titles"
                android:textSize="35sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/DeviseType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/naranja_O"
                android:layout_weight="1"
                style="@style/titles"
                android:textSize="25sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/DeviseRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/naranja_O"
                android:layout_weight="1"
                style="@style/titles"
                android:textSize="25sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/DeviseFlor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/naranja_O"
                android:layout_weight="1"
                style="@style/titles"
                android:textSize="25sp"/>

            <Space
                android:id="@+id/progres_space"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <ProgressBar
                android:id="@+id/progressBarviewdevise"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <Button
                android:id="@+id/buttom_delet_devise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_buttom_one"
                android:text="@string/delet_de_devise"
                style="@style/buttom"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <WebView
                android:id="@+id/webviewid"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                tools:ignore="WebViewLayout" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="200dp" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>